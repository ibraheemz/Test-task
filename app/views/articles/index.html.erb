<%= javascript_include_tag 'search' %>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    h2, h1 {
        text-align: center;
    }

    div.container {
        text-align: center;
        margin: 20px;
    }

    form {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    #search-input {
        width: 300px;
        padding: 8px;
    }

    #search-results {
        list-style: none;
        padding: 0;
        text-align: left;
    }

    a.button {
        background-color: gray;
        color: white;
        padding: 10px;
        margin: 5px;
        text-align: left;
        text-decoration: none;
        font-size: 20px;
    }

    div.article-container {
        border: 2px solid gray;
        padding: 3px;
        margin: 8px;
    }

    h3 {
        margin-bottom: 5px;
    }

    p.italic {
        font-style: italic;
    }
</style>

<div class="container">
    <h2>Search</h2>

    <%= form_with url: searches_path, local: true do |form| %>
        <%= form.label :term, "Search" %>
        <%= form.text_field :term, id: 'search-input', placeholder: "Start typing here . . ." %>
    <% end %>

    <ul id="search-results"></ul>
</div>

<%= link_to 'Most searched keywords', searches_path, class: 'button' %>

<h1>Articles</h1>
<% @articles.each do |article| %>
    <div class="article-container">
        <h3><%= article.title %></h3>
        <p class="italic"><%= truncate(article.body, length: 100, separator: "", omission: "...") %></p>
    </div>
<% end %>
